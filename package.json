{
  "name": "dcbl",
  "version": "1.0.0",
  "description": "A declarative component based library for javascript web applications.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && cp global.d.ts dist && cp -r docs dist",
    "test": "jest",
    "lint-fix": "eslint --fix",
    "prepare": "husky install",
    "create-docs": "typedoc --readme none --plugin typedoc-plugin-markdown --entryDocument docs.md --out docs index.ts"
  },
  "keywords": [
    "declarative",
    "javascript",
    "typescript",
    "library",
    "component"
  ],
  "author": "fidyay",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.6",
    "typedoc-plugin-markdown": "^3.15.2",
    "typescript": "^4.8.2"
  }
}
